
@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

@model FoodOnline.Application.DTOs.PostDTO.ProductPostDTO

<div class="container-fluid mt-5">
    <h2>Create Product</h2>

    <form asp-action="SaveData" asp-controller="Product" method="post" enctype="multipart/form-data">
        <div class="row d-flex">
            <div class="col-6">
                <div class="form-group">
                    
                    <input asp-for="@Model.Id" class="form-control" type="hidden"/>
                   
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <textarea asp-for="@Model.Description" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Weight"></label>
                    <input asp-for="@Model.Weight" class="form-control" />
                    <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Volume"></label>
                    <input asp-for="@Model.Volume" class="form-control" />
                    <span asp-validation-for="@Model.Volume" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.UnitPrice"></label>
                    <input asp-for="@Model.UnitPrice" class="form-control" />
                    <span asp-validation-for="@Model.UnitPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Discount"></label>
                    <input asp-for="@Model.Discount" class="form-control" />
                    <span asp-validation-for="@Model.Discount" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="@Model.IsActive"></label>
                    <input asp-for="@Model.IsActive" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.CategoryId"></label>
                    <select asp-for="@Model.CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">

                    <div class="form-floating mb-3">

                       @{
                            if (@Model == null )
                            {
                                <img src="https://t3.ftcdn.net/jpg/04/84/88/76/360_F_484887682_Mx57wpHG4lKrPAG0y7Q8Q7bJ952J3TTO.jpg" alt="No image" id="img-preview" style="height: 330px; width: 200px" />

                            }else{
                                <img src="~/images/product/@Model.ImageUrl" alt="No image" id="img-preview" style="height: 330px; width: 200px" />

                               
                            }

                       }
                        <input type="file" class="form-control mt-5" asp-for="@Model.Image" id="image-upload" />
                        
                    </div>


                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

     
    </form>
</div>

@section Scripts {
   
    <script src="~/js/image.js"></script>
}
